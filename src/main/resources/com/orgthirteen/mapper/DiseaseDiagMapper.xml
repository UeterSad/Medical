<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orgthirteen.Mapper.DiseaseDiagMapper">
    <select id="findDiseases" resultType="com.orgthirteen.pojo.Disease">
        select * from disease_info e
        <where>
            <if test="diseaseName!=null and diseaseName !=''">
                e.disease_name like concat('%',#{diseaseName},'%')
            </if>
        </where>
    </select>
</mapper>